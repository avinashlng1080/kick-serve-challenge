{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["app/*"],
      "tests": ["tests/*"],
      "@components/*": ["app/components/*"],
      "@screens/*": ["app/screens/*"],
      "@constants/*": ["app/constants/*"],
      "@lib/*": ["app/lib/*"],
      "@database/*": ["app/database/*"],
      "@typings/*": ["app/typings/*"],
      "@network/*": ["app/network/*"],
      "@hook/*": ["app/hook/*"],
    },
    "experimentalDecorators": true
  },
}
